<% layout('../layouts/mainlayout.ejs') -%>
<!DOCTYPE html>
<html lang="en">

<head>
	<link rel="stylesheet" href="/css/bootstrap.min.css">
	<script src="/js/jquery.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</head>

<body>
	<main role="main" class="container">
		<br />
		<br />
		<div class="container">
            <h1>Create Event</h1>
            <br/>
		</div>
		<div class="starter-template">
			<form action="/Event/CreateEvent" method="POST">
				<div class="form-group">
					<label for="title">Title:</label>
					<input type="text" class="form-control" id="title" name="title" value="<%= event.title ? event.title : '' %>">
				</div>
				<div class="form-group">
					<label for="description">Description:</label>
					<input type="text" class="form-control" id="description" name="description" value="<%= event.description ? event.description : '' %>">
                </div>
                <div class="form-group">
					<label for="location">Location:</label>
					<input type="text" class="form-control" id="location" name="location" value="<%= event.location ? event.location : '' %>">
                </div>
                <div class="form-group">
					<label for="day">Date (year-month-day):</label>
					<input type="text" class="form-control" id="day" name="day" value="<%= event.day ? event.day : '' %>">
                </div>
                <div class="form-group">
					<label for="time">Time:</label>
					<input type="text" class="form-control" id="time" name="time" value="<%= event.time ? event.time : '' %>">
                </div>
                <div class="form-group">
					<label for="createdby">Created By:</label>
					<p><%= user.username ? user.username : '' %></p>
					<input type="hidden" class="form-control" id="createdby" name="createdby" value="<%= user.username ? user.username : '' %>">
                </div>
				<br/>
				<input class="btn btn-primary" type="submit" value="Submit">
			</form>
		</div>
	</main>
	<%= errorMessage ? errorMessage : "" %><br/>
</body>

</html>


